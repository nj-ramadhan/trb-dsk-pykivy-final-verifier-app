#:kivy 2.1.0

#:import NoTransition kivy.uix.screenmanager.NoTransition
#:include screen_login.kv
#:include screen_main.kv
#:include screen_final_verifier.kv

# ScreenManager:
<RootScreen>:
    id: screen_manager
    transition: NoTransition()

    ScreenLogin:
        id: screen_login
        name: 'screen_login'
        screen_manager: screen_manager

    ScreenMain:
        id: screen_main
        name: 'screen_main'
        screen_manager: screen_manager

    ScreenFinalVerifier:
        id: screen_final_verifier
        name: 'screen_final_verifier'
        screen_manager: screen_manager   

